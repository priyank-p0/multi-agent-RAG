# Multi-Agent RAG System Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# LLM API Keys (You need at least one of these)
# =============================================================================

# OpenAI API Key (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (get from: https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Hugging Face Token (optional, get from: https://huggingface.co/settings/tokens)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# =============================================================================
# LLM Configuration
# =============================================================================

# Default LLM provider to use (options: openai, anthropic, gemini)
DEFAULT_LLM_PROVIDER=openai

# Model names (update if you want to use different models)
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GEMINI_MODEL=gemini-pro

# =============================================================================
# RAG Configuration (Advanced users only)
# =============================================================================

# PDF storage directory
PDF_DIRECTORY=data/pdfs

# Embedding model for document processing
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Document chunking parameters
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Number of documents to retrieve for each query
MAX_RETRIEVAL_DOCS=7

# Vector store path
VECTOR_STORE_PATH=data/vector_store

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum iterations for agent reasoning
MAX_ITERATIONS=4

# Enable verbose logging
VERBOSE=true

# Enable/disable specific agents
ENABLE_WEB_SEARCH=true
ENABLE_TEXT_GENERATION=true
